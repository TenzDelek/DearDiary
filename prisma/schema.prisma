generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  clerkId  String  @unique
  name     String
  email    String  @unique
  createdAt DateTime @default(now())
}

model Guestbook {
  id           Int      @id @default(autoincrement())
  email        String
  created_by   String
  body         String
  last_modified DateTime @default(now())
}